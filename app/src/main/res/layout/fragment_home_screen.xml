<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeScreen"
    android:background="@drawable/main_background">

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_title_background_color"
            android:gravity="center"
            android:padding="@dimen/text_padding"
            android:text="@string/home_title"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/container_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_transparent"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="@string/main_title"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/dark_app_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/container_padding"
                android:weightSum="5"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/connection_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_bluetooth"
                        android:contentDescription="@string/control_title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/connect"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/item_margin"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shut_down"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_power" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/shutdown"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/voice_cmd_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_mic" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/voice_cmd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/container_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_transparent"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="@string/control_title"
                android:textColor="@color/dark_app_color"
                android:textSize="@dimen/title_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/container_padding"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/f_light_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_light" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/f_light"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/item_margin"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/b_light_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_brightness" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/b_light"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/item_margin">

                    <ImageView
                        android:id="@+id/spray_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_spray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/spray"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/device_one_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_device" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/device_1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/container_padding"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:weightSum="3"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/f_auto_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_auto" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/auto"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/item_margin"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/b_auto_icon_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_auto" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/auto"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/item_margin">

                    <ImageView
                        android:id="@+id/s_mode_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_time" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/s_mode"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/device_two_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_device" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/device_2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/container_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_transparent"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:text="@string/audio_title"
                android:textColor="@color/dark_app_color"
                android:textSize="@dimen/title_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/container_padding"
                android:weightSum="4.3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/voice_up_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_voulme_up" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/v_plus"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/item_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/voice_down_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_voulme_down"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/v_minus"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mute_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_mute" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/mute"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/container_padding"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fb_sound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_voice" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/fb_sound"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/item_margin"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/crazy_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_crazy" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_1sdp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:text="@string/fb_crazy"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/_12sdp">

                    <ImageView
                        android:id="@+id/fb_tone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:contentDescription="TODO"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_music" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/fb_tone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fb_off"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_transparent"
                        android:padding="@dimen/image_padding"
                        android:src="@drawable/ic_power_off"
                         />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_icon_text"
                        android:background="@color/white_transparent"
                        android:gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/fb_off"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>